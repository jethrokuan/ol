
<%= stylesheet_link_tag  "reveal", :media => "all" %>

<div class="reveal">
	<div class="state-background"></div>
	<div class="slides">
		<section class="alignleft">
			<div class="row">
			<%=render partial: "shared/start"%>
			<%=render partial: "shared/navsubjects"%>
				</ul>
			</nav><!--span3-->
			<div class="span8 offset1">
			<h1><%=@lesson.lesson%></h1>
			<p class="lead"><small>by</small> <a href="#">Lydia Liu</a></p>
			<hr>
			<div class="row">
				<div class="span6">
			<h3>Checkpoints</h3>
			<ol>
				<%@lesson.checkpoints.each_with_index do |checkpoint,index|%>
					<li><a href="#" onclick=<%="Reveal.navigateTo(" + (index+1).to_s + ",0)"%>><%=checkpoint.checkpoint%></a></li>
				<%end%>
				<li><a href="#" onclick="Reveal.navigateTo(4,0)" class="salmon">Summary</a></li>
			</ol>
		</div><!--span6-->
		<div class="span2 aligncenter hidden-phone">
			<h3>6 min</h3>
			<h1><a href="#" onclick="Reveal.navigateNext()">Start</a></h1>
		</div><!--span2-->
			</div><!--span8-->
			</div><!--row-->
		</section>
		<%@lesson.checkpoints.each do |checkpoint|%>
			<section id=<%=checkpoint.checkpoint.gsub(' ', '').downcase%>>
				<div class="row-fluid alignleft">
				<div class="span4">
					<ul class="nav nav-pills nav-stacked aligncenter marginbot20p hidden-phone">
						<li><a href="#" onclick="Reveal.navigateTo(0,0);return false">Back to Start</a></li>
					</ul>
					<h5 class="muted"><%=checkpoint.order%></h5>
					<h2><%=checkpoint.checkpoint%></h2>
					<hr>
					<p><%=checkpoint.description%></p>
					<div class="row-fluid margintop20p hidden-phone">
						<div class="span4">
							<ul class="nav nav-pills nav-stacked aligncenter">
								<li><a href="#" onclick="Reveal.navigateLeft();return false">Back</a></li>
							</ul>
						</div><!--span4-->
						<div class="span4">
							<ul class="nav nav-pills nav-stacked aligncenter">
								<li><a href="#" onclick="Reveal.navigateNext();return false">Question</a></li>
							</ul>
						</div><!--span4-->
						<div class="span4">
							<ul class="nav nav-pills nav-stacked aligncenter">
								<li><a href="#" onclick="Reveal.navigateRight();return false">Next</a></li>
							</ul>
						</div><!--span4-->
					</div><!--row-->
				</div><!--span4-->
				<div class="span8">
					<div class="videoWrapper">
						<iframe src=<%="http://www.youtube.com/embed/"+checkpoint.videourl+"?rel=0&amp;theme=light&amp;color=white&amp;autoplay=0&amp;showinfo=0&amp;autohide=3&amp;vq=hd1080"%> frameborder="0" allowfullscreen></iframe>

					</div><!--videoWrapper-->
				</div><!--span8-->
				</div><!--row-->				
			</section>
		<%end%>
		<section class="alignleft">
			<div class="row-fluid alignleft">
				<div class="span4">
					<ul class="nav nav-pills nav-stacked aligncenter marginbot20p hidden-phone">
						<li><a href="#" onclick="Reveal.navigateTo(0,0);return false">Back to Syllabus Outline</a></li>
					</ul>
					<h2>Summary</h2>
					<hr>
					<p>Congratulations, you're done! You now know everything listed on the right. If you're still fuzzy, go back and give it another go!</p>
					<div class="row-fluid margintop20p hidden-phone">
						<div class="span6">
							<ul class="nav nav-pills nav-stacked aligncenter">
								<li><a href="#" onclick="Reveal.navigateLeft();return false">Back</a></li>
							</ul>
						</div><!--span4-->
						<div class="span6">
							<ul class="nav nav-pills nav-stacked aligncenter">
								<li><a href="#" onclick="Reveal.navigateRight();return false">Next Lesson</a></li>
							</ul>
						</div><!--span-->
					</div><!--row-->
				</div><!--span4-->
				<div class="span7 offset1">
					<ul class="icons">
						<li><i class="icon-check"></i> How to elucidate the costs of price discrimination</li>
						<li><i class="icon-check"></i> How to elucidate the benefits of price discrimination</li>
						<li><i class="icon-check"></i> Be able to talk about how cafes price discriminate, as an example</li>
					</ul>
				</div><!--span7-->
			</div><!--row-->
		</section>
	</div><!--slides-->
	<!-- The navigational controls UI -->
	<aside class="controls">
		<a class="left" href="#"><i class="icon-caret-left icon-large"></i></a>
		<a class="right" href="#"><i class="icon-caret-right icon-large"></i></a>
		<a class="up" href="#"><i class="icon-caret-up icon-large"></i></a>
		<a class="down" href="#"><i class="icon-caret-down icon-large"></i></a>
	</aside>

	<!-- Presentation progress bar -->
	<!-- <div class="progress"><span></span></div> -->
	</div><!--reveal-->
<%= javascript_include_tag "head.min" %>
<%= javascript_include_tag "reveal.min" %>
<script>
	Reveal.initialize({
		history: true,
		rollingLinks: false,
		transition: 'linear',
		mouseWheel: false
	});
</script>