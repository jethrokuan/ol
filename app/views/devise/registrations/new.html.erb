<div class="row">
  <div class="span12 aligncenter">
    <h1 class="insignia padbot10" style="font-size:7em;"><a href="index.html" class="clean">ol</a></h1>
    <p>Sign Up</p>
    <hr>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), ) do |f| %>
      <%= devise_error_messages! %>
      <label class="control-label">Name:</label>
      <%= f.text_field :givenname, class: "span4 aligncenter", placeholder: "Given Name" %>
      <%= f.text_field :surname, class: "span4 aligncenter", placeholder: "Surname" %><br>
      <label class="control-label">Email:</label>
      <%= f.email_field :email, class: "span8 aligncenter", placeholder: "Email" %><br>
      <label class="control-label">Password:</label>
      <%= f.password_field :password, class: "span4 aligncenter", placeholder: "Password" %>
      <%= f.password_field :password_confirmation, class: "span4 aligncenter", placeholder: "Confirm Password" %> <br>
      <div class="control-group string">
          <label for="user_role" class="control-label">Membership Type:</label>
          <div class="controls">
            <%= f.collection_select :role, User::ROLES, :to_s, :humanize%>
          </div>
      </div>
      <label class="control-label">School:</label>
      <%= f.text_field :school, class: "span8 aligncenter", placeholder: "School" %> <br>
      <label class="control-label">School Year:</label>
      <%= f.text_field :school_year, class: "span8 aligncenter", placeholder: "School Year eg. 2013" %> <br>

      <% if devise_mapping.rememberable? -%>
        <p><%= f.check_box :remember_me %>  Remember Me </p>
      <% end -%>

      <%= f.submit "Sign Up", class: "btn btn-primary"%>
    <% end %>

    <%= render "devise/shared/links" %>
    <hr>
    <p class="lead">Got Facebook? Use your username and password!</p>
    <p><a href"#">Forgot something?</a></p>
  </div><!--span12-->
</div><!--row-->