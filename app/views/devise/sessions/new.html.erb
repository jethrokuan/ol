<h2>Sign in</h2>
<div class="row">
	<div class="span12 aligncenter">
		<h1 class="insignia padbot10" style="font-size:7em;"><a href="index.html" class="clean">ol</a></h1>
		<hr>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), ) do |f| %>
		  <%= f.text_field :email, class: "span4 aligncenter", placeholder: "Email" %><br>
		  <%= f.password_field :password, class: "span4 aligncenter", placeholder: "Password" %>

		  <% if devise_mapping.rememberable? -%>
		    <p><%= f.check_box :remember_me %>  Remember Me </p>
		  <% end -%>

		  <%= f.submit "Sign In", class: "btn btn-primary", style: "visibility: hidden;" %>
		<% end %>

		<%= render "devise/shared/links" %>
		<hr>
		<p class="lead">Got Facebook? Use your username and password!</p>
		<p><a href"#">Forgot something?</a></p>
	</div><!--span12-->
</div><!--row-->