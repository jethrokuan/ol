<head>
  <!-- universal meta -->
  <%= tag :meta, charset: "utf-8" %>
  <title><%= content_for(:title) + ' | '%>openlectures</title>
  <%= tag :meta, name: "description", content: "Free, online lectures for anyone who wants to learn - because effort should decide success" %>
  <%= tag :meta, name: "author", content: "The Cookie Monster, hello@openlectures.org" %>
  <%= tag :meta, name: "viewport", content: "width=device-width, maximum-scale=1" %>
  <%= javascript_include_tag "review"%>
  <%= tag :meta, name: "apple-mobile-web-app-capable", content: "yes" %>
  <%= tag :meta, name: "apple-mobile-web-app-status-bar-style", content: "black-translucent" %>
  <%= tag :meta, property: "og:site_name", content: "openlectures" %>
  <%= tag :meta, property: "og:url", content: request.url %>
  <%= tag :meta, property: "og:title", content: content_for(:title) + ' | ' + "openlectures" %>
  <%= tag :meta, property: "fb:app_id", content: ENV["FACEBOOK_APP_ID"] %>
  <%= tag :meta, property: "og:email", content: "hello@openlectures.org" %>
  <%= tag :meta, property: "twitter:card", content: "summary" %>
  <%= tag :meta, property: "twitter:site", content: "@openlecturessg" %>
  <%= yield :fbog %>
  <%= csrf_meta_tags %>
  <!-- end universal meta -->

  <!-- windows meta -->
  <!--[if lt IE 7]>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta http-equiv="cleartype" content="on">
  <%= stylesheet_link_tag "font-awesome-ie7", :media => "all" %>
  <meta name="application-name" content="openlectures">
  <meta name="msapplication-tooltip" content="Free, online lectures for anyone who wants to learn">
  <meta name="msapplication-starturl" content="<%=root_path%>">
  <![endif]-->
  <!-- end windows meta -->

  <!-- icons and humans.txt -->
  <link rel="dns-prefetch" href="//youtube.com">
  <%= favicon_link_tag 'favicon.ico', :rel =>"shortcut icon", :type=> 'image/ico'%>
  <%= favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel=>"apple-touch-icon-precomposed", :sizes=>"144x144", :type => 'image/png'%>
  <%= favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel=>"apple-touch-icon-precomposed", :sizes=>"114x114", :type => 'image/png'%>
  <%= favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel=>"apple-touch-icon-precomposed", :sizes=>"72x72", :type => 'image/png'%>
  <%= favicon_link_tag 'apple-touch-icon-57x57-precomposed.png', :rel=>"apple-touch-icon-precomposed", :sizes=>"57x57", :type => 'image/png'%>
  <%= favicon_link_tag 'apple-touch-icon.png', :rel=>"apple-touch-icon", :type => 'image/png'%>
  <%= favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel=>"fluid-icon", :title=>"openlectures", :type => 'image/png'%>
  <!-- end icons and humans.txt -->

  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= yield :styles %>
