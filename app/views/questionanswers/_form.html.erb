<%= simple_form_for(@questionanswer, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-inputs">
    <%= f.hidden_field :checkpoint_id%>
    <%= f.input :question, input_html: {rows: "5"}, placeholder: "Question Here"%>
     <%= f.input :answer, input_html: {rows: "5"}, placeholder: "Answer Here"%>
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary">
      <span class='hidden-phone'><i class='icon-ok'></i> Create Question and Answer
    </button>
  </div>
<% end %>
<%content_for :javascripts do%>
<%=javascript_include_tag "select2"%>
<%end%>
