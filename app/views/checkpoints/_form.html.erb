<%= simple_form_for(@checkpoint, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-inputs">
    <%= f.input :checkpoint, input_html: {class:"input-xxlarge"}, placeholder: "Checkpoint" %>
    <%= f.association :lesson, label_method: :lesson, input_html: {class: "input-xxlarge" }%>
    <%= f.input :description, input_html: {class:"input-xxlarge", rows: "5"}, placeholder: "Description Here"%>
    <%= f.input :videourl, label: "Video Url", input_html: {class:"input-xxlarge"}, placeholder: "Only XYZ from http://www.youtube.com/watch?v=XYZ" %>
     <%= f.input :objective, input_html: {class:"input-xxlarge", rows: "5"}, placeholder: "Objective Here"%>
     <%= f.input :order, input_html: {class: "input-xxlarge"} %>
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary">
      <span class='hidden-phone'><i class='icon-ok'></i> Create Checkpoint
    </button>
  </div>
<% end %>
