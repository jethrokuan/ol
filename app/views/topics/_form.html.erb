<%=stylesheet_link_tag "chosen"%>
<%= simple_form_for(@topic, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-inputs">
    <%= f.input :topic, input_html: {class:"input-xxlarge"}, placeholder: "Topic" %>
    <%= f.association :subject,input_html: {class:"input-xxlarge chzn-select"}, label_method: :subject %>
    <%= f.input :order, input_html: {class:"input-xxlarge"}, placeholder: "Order your topic:" %>
    <%= f.input :description, input_html: {class:"input-xxlarge"}, placeholder: "Description Here" %>
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary">
      <span class='hidden-phone'><i class='icon-ok'></i> Create Topic
    </button>
  </div>
<% end %>

<script type="text/javascript">
  jQuery(function($){
      $('.chzn-select').chosen();
  });
</script>